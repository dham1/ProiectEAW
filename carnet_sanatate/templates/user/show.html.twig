{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    {% include('base.html.twig') %}
<div class="container" style="margin-top: 5%">
    <h1>{{ app.user.username }}'s Personal Details</h1>

    <table class="table table-bordered table-info" style="max-width:400px;">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.Email }}</td>
        </tr>
        <tr>
            <th>Password</th>
            <td>{{ user.Password }}</td>
        </tr>
        </tbody>
    </table>

    <button class="btn btn-primary" onclick="goToDetails({{ user.UserDetails }})">View User Details</button>

    <a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>
    <a class="btn btn-danger" href="{{ path('dashboard') }}">Back</a>
</div>



    <script type="application/javascript">
        function goToDetails(idUss) {
                if(idUss == undefined){
                    window.location.href = "{{ path('user_details_new') }}";
                }
                else{
                    window.location.href = "/user/details/"+ idUss;
                }
        }
    </script>
{% endblock %}
