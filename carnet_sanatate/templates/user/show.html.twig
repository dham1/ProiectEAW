{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    {% include('base.html.twig') %}

    <h1>User</h1>

    <table class="table table-bordered">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.Email }}</td>
        </tr>
        <tr>
            <th>Password</th>
            <td>{{ user.Password }}</td>
        </tr>
        </tbody>
    </table>

    <button class="btn btn-primary" onclick="goToDetails({{ user.UserDetails }})">View User Details</button>

    <a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>
    <a class="btn btn-danger" href="{{ path('dashboard') }}">Home</a>


    <script type="application/javascript">
        function goToDetails(idUss) {
                if(idUss == undefined){
                    window.location.href = "{{ path('user_details_new') }}";
                }
                else{
                    window.location.href = "/user/details/"+ idUss;
                }
        }
    </script>
{% endblock %}
