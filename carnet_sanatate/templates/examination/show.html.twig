{% extends 'base.html.twig' %}

{% block title %}Examination{% endblock %}

{% block body %}
    {% include('base.html.twig') %}
<div class="container" style="margin-top: 5%">
    <div style="max-width: 600px">
        <h1>Examination</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ examination.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ examination.Date ? examination.Date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ examination.Description }}</td>
            </tr>
            </tbody>
        </table>


        <a class="btn btn-warning" href="{{ path('examination_edit', {'id': examination.id}) }}">Edit</a>

        {{ include('examination/_delete_form.html.twig') }}
        <a class="btn btn-info" href="{{ path('health_card_examination',{HealthCard: examination.HealthCard.id}) }}">Back</a>
    </div>
</div>


{% endblock %}
