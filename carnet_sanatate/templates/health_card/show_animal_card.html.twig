{% extends 'base.html.twig' %}

{% block title %}HealthCard index{% endblock %}

{% block body %}
    {% include('base.html.twig') %}

    <h1>Show this health card to the vet, he will get your Health Card Number</h1>


    {% for health_card in animal_health_card %}
        <div class="card border-success mb-3" style="max-width: 400px;">
            <div class="card-header bg-transparent border-success">{{ health_card.Animal.Name }}'s Health Card</div>
            <div class="card-body text-success">

                <h5 class="card-title">Health Card No.: {{ health_card.CardNumber }}</h5>
                <p class="card-text">id: {{ health_card.id }}</p>
                <p class="card-text">Type: {{ health_card.Animal.Type }}</p>
                <p class="card-text">Breed: {{health_card.Animal.Breed}}</p>
                <p class="card-text">Allergies: {{health_card.Animal.Allergies}}</p>
            </div>
            <div class="card-footer bg-transparent border-success">
                <a class="btn btn-warning" href="{{ path('health_card_edit', {'id': health_card.id}) }}">Edit</a>
                <a class="btn btn-success" href="{{ path('health_card_edit', {'id': health_card.id}) }}">Check examinations</a>
                <a class="btn btn-primary" href="{{ path('health_card_edit', {'id': health_card.id}) }}">Animal Details</a>
                <a class="btn btn-primary" href="{{ path('health_card_edit', {'id': health_card.id}) }}">Back</a>

            </div>

        </div>

    {% else %}
        <h2>no records found</h2>
    {% endfor %}

{#    <a href="{{ path('health_card_new') }}">Create new</a>#}
{% endblock %}
